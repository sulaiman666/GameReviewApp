<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameReviewApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_900</item>
        <item name="colorPrimaryVariant">@color/indigo_900_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_500</item>
        <item name="colorSecondaryVariant">@color/cyan_a200_dark</item>
        <item name="colorOnSecondary">@color/text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.Splash">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Used on about. -->
    <style name="TextContent.About">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextContent.About.Content">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextContent.About.Judul">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Used on detail. -->
    <style name="TextContent.Detail">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextContent.Detail.Margin">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextContent.Detail.Margin.SubJudul">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="TextContent.Detail.Margin.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

    <style name="TextContent.Detail.Margin.Text.Spec">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextContent.Detail.Margin.Text.Spec.Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextContent.Content">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextContent.Content.Spec">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextContent.Content.Spec.Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Used on Cardview-->
    <style name="TextContent.Headline">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/about_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Judul">
        <item name="android:background">@color/indigo_900</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>